<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gadimai.measurehealth">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_main"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:screenOrientation="portrait">
        <activity android:name=".Activity.DebugValueDialog"
                  android:screenOrientation="portrait"></activity>

        <activity android:name=".Activity.ShowInfoActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".Activity.ResultMeasureActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".Activity.ShowInfoListActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".Activity.SelectInfoActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".Activity.DeviceListInfoDialog"
                  android:screenOrientation="portrait"/>

        <activity android:name=".Activity.DetailRankMeasureActivity"
                   android:screenOrientation="portrait"/>

        <activity android:name=".Activity.RankMeasureActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".Activity.SplashActivity"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.infoCautionDialog"
                  android:screenOrientation="portrait"/>

        <activity android:name=".Activity.MainMenuActivity"
                  android:screenOrientation="portrait"/>
    </application>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <uses-permission android:name="android.permission.BLUETOOTH" />

</manifest>